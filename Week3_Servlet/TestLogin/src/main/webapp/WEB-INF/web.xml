<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>TestLogin</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
	<servlet>
		<servlet-name>wish</servlet-name>
		<servlet-class>com.test.LoginServlet</servlet-class>
		<!-- <load-on-startup>0</load-on-startup> -->

		<init-param>
			<param-name>myuser</param-name>
			<param-value>system</param-value>
		</init-param>

		<init-param>
			<param-name>mypass</param-name>
			<param-value>oracle</param-value>
		</init-param>
	</servlet>
<servlet-mapping>
		<servlet-name>wish</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>company</param-name>
		<param-value>Revature Limited</param-value>
	</context-param>
</web-app>